<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_below="@+id/d1"
        android:background="@drawable/recycle_background"
        android:id="@+id/book_viewclicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:id="@+id/borrowbook_image"

            android:layout_width="60dp"
            android:layout_height="80dp"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/id1"
            android:layout_toEndOf="@+id/borrowbook_image"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/boorrowbook_image">
            <TextView
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="Book Title"
                />
            <TextView
                android:textColor="@color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/borrowbook_title"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/id2"
            android:layout_toEndOf="@+id/borrowbook_image"
            android:layout_below="@id/id1"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/boorrowbook_image">
            <TextView
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Return Date"
                android:textColor="@color/white"
                />
            <TextView
                android:textColor="@color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/borrowbook_Date"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/id3"
            android:layout_below="@id/id2"
            android:layout_toEndOf="@+id/borrowbook_image"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/boorrowbook_image"
            tools:ignore="UnknownId">

            <TextView
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="Remining Days" />
            <TextView
                android:textColor="#F11717"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/borrowbook_reminingdays"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>